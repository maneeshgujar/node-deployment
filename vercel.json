{
    
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      },
      {
        "src": "build/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/(.+)",
        "dest": "build/$1"
      },
      {
        "src": "/products",
        "dest": "index.js"
    },
      {
        "src": "/products/(.*)",
        "dest": "index.js"
    },
    {
        "src": "/",
        "dest": "build/index.html"
    },
    {
        "src": "/add",
        "dest": "build/index.html"
    }
    ]
  }